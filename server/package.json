{
  "name": "base-odyssey-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "migrate:up": "migrate-mongo up -f migrate-mongo-config.cjs",
    "migrate:down": "migrate-mongo down -f migrate-mongo-config.cjs",
    "seed": "tsx src/seed.ts",
    "seed:quests": "tsx src/seed-quests.ts",
    "debug:db": "tsx src/debug-db.ts",
    "check:users": "tsx src/check-users.ts",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.0.0",
    "@fastify/swagger": "^9.4.0",
    "@supabase/supabase-js": "^2.87.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "mongodb-memory-server": "^10.4.1",
    "mongoose": "^8.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "migrate-mongo": "^11.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "vitest": "^2.1.4"
  }
}
